root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space

[*.{kt, kts, java}]
insert_final_newline = true
end_of_line = lf
max_line_length = 120
continuation_indent_size = 4
wildcard_import_limit = 999
# Intellij IDEA specific
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999

[*.{yml, yaml, sql}]
indent_size = 2
